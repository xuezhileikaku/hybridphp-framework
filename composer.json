{
    "name": "hybridphp/framework",
    "description": "HybridPHP Framework - Fusion of Yii2 usability + Workerman multi-process + AMPHP async",
    "type": "library",
    "keywords": [
        "framework",
        "async",
        "coroutine",
        "workerman",
        "amphp",
        "yii2",
        "high-performance",
        "hybrid"
    ],
    "license": "MIT",
    "homepage": "https://hybridphp.com",
    "support": {
        "docs": "https://docs.hybridphp.com",
        "issues": "https://github.com/hybridphp/framework/issues",
        "source": "https://github.com/hybridphp/framework"
    },
    "authors": [
        {
            "name": "HybridPHP Team",
            "email": "team@hybridphp.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "amphp/amp": "^3.0",
        "amphp/http-client": "^5.0",
        "amphp/http-server": "^3.0",
        "amphp/mysql": "^3.0",
        "amphp/redis": "^2.0",
        "amphp/socket": "^2.0",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.0",
        "nikic/fast-route": "^1.3",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^3.0",
        "ramsey/uuid": "^4.0",
        "symfony/config": "^6.0",
        "symfony/console": "^6.0",
        "vlucas/phpdotenv": "^5.0",
        "workerman/workerman": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "HybridPHP\\Core\\": "core/"
        },
        "files": [
            "core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "bin": [
        "bin/hybrid"
    ],
    "scripts": {
        "start": "php bootstrap.php",
        "test": "phpunit",
        "test:unit": "phpunit tests/unit",
        "test:feature": "phpunit tests/feature",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "cs": "phpcs --standard=PSR12 core/",
        "cs-fix": "phpcbf --standard=PSR12 core/",
        "analyze": "phpstan analyze core/",
        "security:audit": "composer audit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.5.x-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}