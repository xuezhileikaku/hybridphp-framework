[mysqld]
# Development MySQL configuration
# Optimized for development with detailed logging

# Basic settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql
skip-external-locking

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Connection settings (relaxed for development)
max_connections = 100
max_connect_errors = 1000
max_allowed_packet = 16M
interactive_timeout = 28800
wait_timeout = 28800

# Buffer settings (smaller for development)
innodb_buffer_pool_size = 128M
innodb_log_file_size = 48M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

# Query cache (enabled for development)
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 1M

# Temporary tables
tmp_table_size = 32M
max_heap_table_size = 32M

# MyISAM settings
key_buffer_size = 16M
read_buffer_size = 1M
read_rnd_buffer_size = 8M
sort_buffer_size = 4M

# Logging (verbose for development)
general_log = 1
general_log_file = /var/lib/mysql/general.log
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow.log
long_query_time = 1
log_queries_not_using_indexes = 1

# Error log
log-error = /var/lib/mysql/error.log

# Binary logging (disabled for development)
skip-log-bin

# Performance schema
performance_schema = ON

# Security (relaxed for development)
local-infile = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4